{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/cache/*": [
        "./src/lib/cache/*"
      ],
      "@/db/*": [
        "./src/server/db/*"
      ],
      "@/prisma/browser": [
        "./generated/prisma/browser.ts"
      ],
      "@/prisma/client": [
        "./generated/prisma/client.ts"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2024"
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "out",
    "generated",
    "generated/**/*.ts"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ]
}
